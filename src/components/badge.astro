---
import { ExternalLink } from 'lucide'
import LucideIcon from './lucide-icon.astro'

interface Props {
  href: string
}

const { href } = Astro.props
---

<a href={href} class="badge" target="_blank" rel="noopener noreferrer">
  <slot />
  <LucideIcon icon={ExternalLink} width={16} height={16} />
</a>

<style>
  .badge {
    display: inline-flex;
    align-items: center;
    gap: 8px;
    text-decoration: none;
    padding: 4px 8px;
    border: 1px solid var(--border);
    border-radius: 4px;
    font-size: small;
    opacity: 0.7;
    transition: opacity 0.15s ease-in;
    &:hover {
      opacity: 1;
    }
  }
</style>
